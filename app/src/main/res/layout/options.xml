<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:text="@string/videoText">

    </TextView>

    <LinearLayout
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/optionTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:paddingStart="5dp"
            android:background="@color/colorAccent"/>

        <ImageView
            android:id="@+id/optionIV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/optionTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:paddingStart="5dp"
            android:background="@color/colorAccent"/>
        <ImageView
            android:id="@+id/optionIV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/optionTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:paddingStart="5dp"
            android:background="@color/colorAccent"/>
        <ImageView
            android:id="@+id/optionIV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/optionTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:paddingStart="5dp"
            android:background="@color/colorAccent"/>
        <ImageView
            android:id="@+id/optionIV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>